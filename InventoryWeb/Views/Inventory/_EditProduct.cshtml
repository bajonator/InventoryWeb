@model InventoryWeb.Core.Models.Domains.Product

<div class="modal fade text-lg-start" id="EditProdModal-@Model.Id" tabindex="-1" role="dialog" aria-labelledby="EditProdModalLabel" aria-hidden="true">
    <div class="modal-dialog " role="document">
        <div class="modal-content">
            <form id="editForm-@Model.Id">
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Edytuj Produkt</h5>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="Code" class="control-label" style="font-weight:bolder">Kod:</label>
                        <input asp-for="Code" class="form-control" autofocus />
                        <span asp-validation-for="Code" class="text-danger"></span>

                        <label asp-for="ProductName" class="control-label" style="font-weight:bolder">Nazwa produktu:</label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>

                        <label asp-for="UnitId" class="control-label" style="font-weight:bolder">Jednostka:</label>
                        <input asp-for="UnitId" class="form-control"/>
                        <span asp-validation-for="UnitId" class="text-danger"></span>

                        <label asp-for="Quantity" class="control-label" style="font-weight:bolder">Ilość:</label>
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>

                        <label asp-for="Price" class="control-label" style="font-weight:bolder">Cena:</label>
                        <input asp-for="Price" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-Cancel" data-dismiss="modal">Anuluj</button>
                    <button type="button" class="btn btn-primary" onclick="editProduct('@Model.Id')">Zapisz</button>
                </div>
            </form>
        </div>
    </div>
</div>